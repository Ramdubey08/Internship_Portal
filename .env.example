# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-min-50-chars
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
DB_NAME=internship_portal
DB_USER=postgres
DB_PASSWORD=strong_password_here_change_in_production
DB_HOST=db
DB_PORT=5432

# Database URL (alternative to individual settings)
